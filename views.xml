<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_backend" name="custom bar assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/hide_left_menu/static/src/js/toggle_leftbar.js"></script>
            </xpath>
        </template>

        <template id="menu_webclient_bootstrap_hide_left_menu" inherit_id="web.webclient_bootstrap">
            <xpath expr="//div[@class='navbar-header']" position="inside">
                <ul class="ul_toggle_leftmenu" style="list-style: none;padding-left: 10px;padding-top: 5px;">
                    <li class="btn-link toggle_leftmenu">
                        <span class="fa fa-bars fa-lg" style="color: white !important;"></span>
                    </li>
                </ul>
            </xpath>
        </template>

    </data>
</openerp>

